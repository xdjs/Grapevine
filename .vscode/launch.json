    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "üöÄ Launch Server (Development)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/server/index.ts",
            "args": [],
            "env": {
                "NODE_ENV": "development"
            },
            "runtimeExecutable": "tsx",
            "runtimeArgs": ["--inspect"],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "outputCapture": "std"
        },
        {
            "name": "üîß Launch API (Development)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/api/index.ts",
            "args": [],
            "env": {
                "NODE_ENV": "development"
            },
            "runtimeExecutable": "tsx",
            "runtimeArgs": ["--inspect"],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "outputCapture": "std"
        },
        {
            "name": "üèóÔ∏è Launch Server (Production)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/dist/index.js",
            "args": [],
            "env": {
                "NODE_ENV": "production"
            },
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "outputCapture": "std",
            "preLaunchTask": "build"
        },
        {
            "name": "üîó Attach to Running Server",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "üß™ Debug Current TypeScript File",
            "type": "node",
            "request": "launch",
            "program": "${file}",
            "args": [],
            "runtimeExecutable": "tsx",
            "runtimeArgs": ["--inspect"],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "outputCapture": "std"
        },
        {
            "name": "üîç Debug Server with Custom Environment",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/server/index.ts",
            "args": [],
            "env": {
                "NODE_ENV": "development",
                "DEBUG": "*",
                "PORT": "3000"
            },
            "runtimeExecutable": "tsx",
            "runtimeArgs": ["--inspect"],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "outputCapture": "std"
        },
        {
            "name": "üêõ Debug with Nodemon",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/server/index.ts",
            "args": [],
            "env": {
                "NODE_ENV": "development"
            },
            "runtimeExecutable": "nodemon",
            "runtimeArgs": ["--exec", "tsx", "--inspect"],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "outputCapture": "std",
            "restart": true
        }
    ]
}